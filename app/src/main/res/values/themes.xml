<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Tazq" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_primary</item>
        <item name="android:windowBackground">@color/gray_light</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Tazq.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_192x192</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Tazq</item>
    </style>
</resources>
